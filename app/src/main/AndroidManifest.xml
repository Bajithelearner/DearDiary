<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thevampire.deardiary">

    <application
        android:allowBackup="true"
        android:icon="@drawable/diary_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".deardiary.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".deardiary.ui.RegisterActivity"
            android:label="@string/register_label" />
        <activity
            android:name=".deardiary.ui.FeedActivity"

            android:label="@string/feed">

        </activity>
        <activity
            android:name=".deardiary.ui.AddDiaryActivity"
            android:label="@string/add_today" />
        <activity
            android:name=".deardiary.ui.DiaryBodyActivity"
            android:label="@string/title_activity_diary_body"
            android:theme="@style/AppTheme" />
        <activity android:name=".deardiary.ui.AboutActivity"
            android:label="About"></activity>
    </application>

</manifest>